<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp"
    android:orientation="vertical">
    <ImageView
        android:padding="@dimen/_18sdp"
        android:id="@+id/image_one"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/img_back"
        android:scaleType="centerCrop"
        android:src="@drawable/play_splash" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_one"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_2sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="Genre"
            android:textSize="@dimen/_8sdp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="SubGenre"
            android:textSize="@dimen/_8sdp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="App_size"
            android:textSize="@dimen/_8sdp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_2sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:text="4.6"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"></TextView>
    </LinearLayout>
</LinearLayout>